<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="-16dp"
            tools:layout_editor_absoluteY="-182dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >


                        <ImageButton
                            android:id="@+id/backButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_gravity="start"
                            android:background="@drawable/ic_baseline_arrow_back_ios_new_24"
                            />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="80dp"
                            android:text="My Account"
                            android:textColor="@color/black"
                            android:textSize="30dp"
                            />


                        <ImageButton
                            android:id="@+id/switchprofileimage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="60dp"
                            android:background="@drawable/roundcorner"
                            android:src="@drawable/ic_baseline_camera_alt_24"
                            android:layout_marginStart="40dp"
                            android:layout_marginBottom="-5dp"
                            />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/profileimage"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/harkkatyotesti"
                            app:shapeAppearanceOverlay="@style/roundedview"
                            android:layout_marginBottom="60dp"/>

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Username"
                            android:layout_gravity="start"
                            android:layout_marginStart="100dp"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/insertname"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="100dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Age"
                            android:textColor="@color/black"
                            android:layout_gravity="start"
                            android:layout_marginStart="100dp"
                            android:layout_marginTop="30dp"
                            />

                        <EditText
                            android:id="@+id/insertage"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="100dp"
                            android:layout_marginBottom="80dp"
                            />

                        <TextView
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:text="Set a reminder, so you don't forget your movie nights!"
                            />

                        <EditText
                            android:id="@+id/setdatetext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="insert date here"
                            android:layout_marginTop="40dp"
                            android:layout_gravity="start"
                            android:layout_marginStart="50dp"
                            />


                        <Button
                            android:id="@+id/datebutton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="Set reminder"
                            android:layout_marginTop="-46dp"
                            android:layout_marginEnd="50dp"
                            />

                        <CalendarView
                            android:id="@+id/calendar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minDate="01/01/2022"
                            android:maxDate="12/31/2022"
                            />

                </LinearLayout>

        </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>